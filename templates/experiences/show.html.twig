{% extends 'base_admin.html.twig' %}

{% block title %}Experiences{% endblock %}

{% block body %}
    <h1>{{experience.title}}</h1>
    <blockquote>Vous trouverez ici toutes les informations concernant vos projets.</blockquote>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ experience.title }}</td>
            </tr>
            <tr>
                <th>Entreprise/th>
                <td>{{ experience.company }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ experience.description }}</td>
            </tr>
            <tr>
                <th>DÃ©but</th>
                <td>{{ experience.startedAt ? experience.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ experience.endedAt ? experience.endedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(experience, 'imageFile') }}" class="project-img"></td>
            </tr>
        </tbody>
    </table>

    <div class="right-align">
        <a href="{{ path('experiences_index') }}" class="btn"><i class="material-icons back">arrow_back</i>Retour</a>
        <a href="{{ path('experiences_edit', {'id': experience.id}) }}" class="btn">Modifier<i class="material-icons">edit</i></a>
        {{ include('experiences/_delete_form.html.twig') }}
    </div>
{% endblock %}
