{% extends 'base.html.twig' %}

{% block title %}Skill index{% endblock %}

{% block body %}
        <h1>Skill index</h1>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>Image</th>
                    <th>UpdatedAt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.id }}</td>
                    <td>{{ skill.name }}</td>
                    <td>{{ skill.level }}</td>
                    <td><img src="{{ vich_uploader_asset(skill, 'imageFile') }}" class="logo-small"></td>
                    <td>{{ skill.updatedAt ? skill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('skill_show', {'id': skill.id}) }}">show</a>
                        <a href="{{ path('skill_edit', {'id': skill.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('skill_new') }}" class="btn">Create new</a>
{% endblock %}
