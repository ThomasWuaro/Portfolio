{% extends 'base_admin.html.twig' %}

{% block title %}Skill{% endblock %}

{% block body %}
    <h1>{{skill.name}}</h1>
    <blockquote>Vous trouverez ici toutes les informations concernant vos comp√©tences.</blockquote>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
             <tr>
                <th>Nom</th>
                <td>{{ skill.name }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ skill.level }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(skill, 'imageFile') }}"></td>
            </tr>
        </tbody>
    </table>

    <div class="right-align">
        <a href="{{ path('skill_index') }}" class="btn"><i class="material-icons back">arrow_back</i>Retour</a>
        <a href="{{ path('skill_edit', {'id': skill.id}) }}" class="btn">Modifier<i class="material-icons">edit</i></a>
        {{ include('skill/_delete_form.html.twig') }}
    </div>
{% endblock %}
